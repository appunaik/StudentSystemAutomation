 <beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:spring="http://www.springframework.org/schema/beans" 
    xsi:schemaLocation="
        https://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.0.xsd
        https://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.0.xsd">
 
	<util:map id="routes" map-class="java.util.HashMap">
		<entry key="user_post_url" value="${base_url}" />
		<entry key="user_get_url" value="${base_url}/{studentId}"/>
		<entry key="user_update_url" value="${base_url}/{studentId}"/>
		<entry key="user_delete_url" value="${base_url}/{studentId}"/>
	</util:map>
	<bean id="userRoutes" class="api.endpoints.Routes">
		<property name="routesPool" ref="routes"/>
	</bean>
